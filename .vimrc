set nocompatible
filetype plugin indent on
syntax on
set number
set ruler

" tabs and layout
set tabstop=2 
set softtabstop=2 
set shiftwidth=2 
set expandtab
set backspace=2
set nowrap
set autoindent

" file read/write
set encoding=utf-8 
set fileencoding=utf-8
set nobackup 
set nowritebackup 
set noswapfile
set autoread

" bash like auto-completion
set wildmenu
set wildmode=list:longest

" ignore compiled files
set wildignore=*.o,*~,*.pyc

" don't beep
set noerrorbells
set visualbell 
set t_vb=

" navigation
set showmatch
set nostartofline
set scrolloff=5

" searching
set hlsearch 
set incsearch 
set ignorecase 
set smartcase
